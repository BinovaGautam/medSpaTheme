{
  "name": "preetidreams-medical-spa-theme",
  "description": "Premium WordPress theme for luxury medical spas with HIPAA-conscious design, treatment management, and accessibility compliance",
  "version": "1.0.0",
  "author": "PreetiDreams Development Team",
  "license": "MIT",
  "homepage": "https://preetidreams.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/preetidreams/medical-spa-theme"
  },
  "keywords": [
    "wordpress",
    "theme",
    "medical-spa",
    "luxury",
    "aesthetic",
    "wellness",
    "hipaa-conscious",
    "accessibility",
    "sage",
    "tailwindcss"
  ],
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && yarn build:php",
    "build:php": "composer install --no-dev --optimize-autoloader",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint resources/scripts --ext .ts,.tsx,.js,.jsx --fix",
    "lint:css": "stylelint resources/styles/**/*.scss --fix",
    "format": "yarn format:js && yarn format:css",
    "format:js": "prettier --write resources/scripts",
    "format:css": "prettier --write resources/styles",
    "medical:test": "yarn test tests/medical-compliance",
    "hipaa:validate": "yarn test tests/hipaa-compliance",
    "accessibility:test": "yarn lighthouse:a11y && yarn axe:test",
    "lighthouse:a11y": "lighthouse --only-categories=accessibility --output=json",
    "axe:test": "jest tests/accessibility/axe.test.js",
    "security:audit": "yarn audit --level moderate",
    "translate": "yarn translate:pot && yarn translate:update",
    "translate:pot": "wp i18n make-pot . ./resources/lang/preetidreams.pot --include=\"theme.json,patterns,app,resources\"",
    "translate:update": "for file in ./resources/lang/*.po; do wp i18n update-po ./resources/lang/preetidreams.pot $file; done",
    "translate:compile": "yarn translate:mo && yarn translate:js",
    "translate:js": "wp i18n make-json ./resources/lang --pretty-print",
    "translate:mo": "wp i18n make-mo ./resources/lang ./resources/lang"
  },
  "devDependencies": {
    "@roots/vite-plugin": "^1.0.2",
    "@tailwindcss/vite": "^4.0.9",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "laravel-vite-plugin": "^1.2.0",
    "lighthouse": "^11.4.0",
    "prettier": "^3.2.5",
    "sass-embedded": "^1.89.1",
    "stylelint": "^16.2.1",
    "stylelint-config-standard-scss": "^13.0.0",
    "tailwindcss": "^4.0.9",
    "typescript": "^5.3.3",
    "vite": "^6.2.0"
  },
  "dependencies": {
    "axe-core": "^4.8.4"
  }
}
